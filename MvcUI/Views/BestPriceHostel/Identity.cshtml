@model Mercoplano.Simplex.Server.MvcUI.Models.VariableIdentityModel
@using Mercoplano.Simplex.Server.MvcUI.Controllers;

@{
    ViewBag.Title = BaseMvc.GetLabel("Identity", (Int16)ViewBag.LanguageId);
    Layout = "~/Views/Shared/_LayoutPageBestPrice.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- Simplex 2016-01 -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1847611814626404"
             data-ad-slot="6069916587"
             data-ad-format="auto"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>

</div>

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("Identity", "BestPriceHostel", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h4>@BaseMvc.GetLabel("ProfitOptimizationWithAccommodation", (Int16)ViewBag.LanguageId)</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <div class="col-md-10">
                        <br />
                        <details open>
                            <summary><strong>@BaseMvc.GetLabel("WhatIsIt", (Int16)ViewBag.LanguageId)</strong></summary>
                            <p>@BaseMvc.GetLabel("IdentifyHowEachTypeOfAccommodationWillBeIdentifiedInTheCaseStudy.Example:SingleRoom,Double,SharedRoom", (Int16)ViewBag.LanguageId)</p>
                        </details>
                    </div>
                </div>
                if (Model.LineDescrs.Count > 0)
                {
                    @Html.HiddenFor(model => Model.LineDescrs[0].Label)
                }
                for (int i = 1; i < Model.LineDescrs.Count; i++)
                {
                    <div class="form-group">
                        @Html.Label(BaseMvc.GetLabel("NameOfEachVarietyOfAccommodation", (Int16)ViewBag.LanguageId), new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => Model.LineDescrs[i].Label, new { @class = "form-control" })
                        </div>
                    </div>
                }

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <p>
                            <input type="submit" value="@BaseMvc.GetLabel("Next", (Int16)ViewBag.LanguageId)" class="btn btn-default" />
                        </p>
                    </div>
                </div>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



